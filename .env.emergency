# EMERGENCY MODE CONFIGURATION
# Use this file to configure emergency fallback settings for SSL/segfault issues

# EMERGENCY MODE: Disable all concurrent batch operations
SCALAPAY_EMERGENCY_MODE=true

# Force sequential batch operations (overrides all concurrency settings)
SCALAPAY_FORCE_SEQUENTIAL_BATCH=true

# Disable concurrent slides processing
SCALAPAY_ENABLE_CONCURRENT_BATCH_OPERATIONS=false

# Conservative connection and retry settings
SCALAPAY_MAX_CONCURRENT_SLIDES=1
SCALAPAY_SLIDES_API_BATCH_SIZE=2
SCALAPAY_BATCH_RETRY_ATTEMPTS=1
SCALAPAY_BATCH_RETRY_DELAY=2.0

# Circuit breaker settings (sensitive to failures)
SCALAPAY_CIRCUIT_BREAKER_THRESHOLD=1
SCALAPAY_CIRCUIT_BREAKER_TIMEOUT=60

# HTTP connection management
SCALAPAY_HTTP_CONNECTION_POOL_SIZE=2
SCALAPAY_HTTP_CONNECTION_TIMEOUT=15

# Enable automatic fallback on any error
SCALAPAY_EMERGENCY_FALLBACK_ON_ERROR=true

# Logging configuration
SCALAPAY_LOG_LEVEL=INFO
SCALAPAY_BATCH_OPERATIONS_LOG_LEVEL=DEBUG